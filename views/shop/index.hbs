<!-- loop in handlebars like a for loop, loops through each product, here # denotes a block -->
{{# each products}}
  <div class="row">

      {{# each this}} 
           
           <div class="col-sm-6 col-md-4">  
                <div class="card clearfix" style="width: 18rem;">
                    <img class="card-img-top img-fluid" src="{{this.imagePath}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="float-left price">$ {{this.price}}</p>
                        <a href="#" class="btn float-right btn-success">Add to Cart</a>
                    </div>
                </div>
           </div>
     {{/each}}
 
    
   </div>    

{{/each}}
